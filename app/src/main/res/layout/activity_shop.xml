<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상 점"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@id/now_shoes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/money"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0 개"
        android:gravity="right"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/now_shoes"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/now_shoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_shop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/items">
        <TextView
            android:id="@+id/now_shoes_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ 현재 착용 정보 ]"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/now_shoes_start_line"/>
        <View
            android:id="@+id/now_shoes_start_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/now_shoes_str"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/now_item"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/now_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/now_shoes_start_line"
            app:layout_constraintBottom_toTopOf="@id/now_shoes_end_line">
            <ImageView
                android:id="@+id/now_shoes_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:background="@drawable/shoes"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/now_shoes_context"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/now_shoes_name"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:text="착용한 신발 이름"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/now_shoes_img"
                app:layout_constraintRight_toLeftOf="@id/now_shoes_cost"
                app:layout_constraintBottom_toTopOf="@id/now_shoes_context"/>
            <TextView
                android:id="@+id/now_shoes_cost"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="right"
                android:text="착용한 신발 가격"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/now_shoes_name"
                app:layout_constraintBottom_toTopOf="@id/now_shoes_context"/>
            <TextView
                android:id="@+id/now_shoes_context"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:text="착용한 신발 설명"
                app:layout_constraintTop_toBottomOf="@id/now_shoes_name"
                app:layout_constraintLeft_toRightOf="@id/now_shoes_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/now_shoes_end_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/now_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/now_shoes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/items_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ 아이템 ]"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ListView
            android:id="@+id/items_list"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/items_str"
            app:layout_constraintBottom_toBottomOf="parent">

        </ListView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
