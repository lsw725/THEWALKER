<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정 보"
        android:textSize="64sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/point"/>
    <TextView
        android:id = "@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="point"
        android:textSize = "30sp"
        app:layout_constraintTop_toBottomOf="@id/title_status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/point_table"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/point_table"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/point"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/health_table"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/point_table_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ 획득포인트 정보 ]"
            android:textSize="18dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/point_table_first_line"/>
        <View
            android:id="@+id/point_table_first_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/point_table_str"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/now_point_str"/>
        <TextView
            android:id="@+id/now_point_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 획득 점수!!"
            app:layout_constraintTop_toBottomOf="@id/point_table_first_line"
            app:layout_constraintRight_toLeftOf="@+id/now_point"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/now_step_str"/>
        <TextView
            android:id="@+id/now_point"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/point_table_first_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/now_point_str"
            app:layout_constraintBottom_toTopOf="@id/now_step"/>
        <TextView
            android:id="@+id/now_step_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 걸음 수"
            app:layout_constraintTop_toBottomOf="@id/now_point_str"
            app:layout_constraintRight_toLeftOf="@id/now_step"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/point_table_second_line"/>
        <TextView
            android:id="@+id/now_step"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/now_point"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/now_step_str"
            app:layout_constraintBottom_toTopOf="@id/point_table_second_line" />
        <View
            android:id="@+id/point_table_second_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/now_step_str"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/day_max_str"/>
        <TextView
            android:id="@+id/day_max_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="일일 최대 획득 점수"
            app:layout_constraintTop_toBottomOf="@id/point_table_second_line"
            app:layout_constraintRight_toLeftOf="@id/day_max"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/day_aver_str"/>
        <TextView
            android:id="@+id/day_max"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/point_table_second_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/day_max_str"
            app:layout_constraintBottom_toTopOf="@id/day_aver"/>
        <TextView
            android:id="@+id/day_aver_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="일일 평균 획득 점수"
            app:layout_constraintTop_toBottomOf="@id/day_max_str"
            app:layout_constraintRight_toLeftOf="@id/day_aver"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/point_table_third_line"/>
        <TextView
            android:id="@+id/day_aver"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/day_max"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/day_aver_str"
            app:layout_constraintBottom_toTopOf="@id/point_table_third_line"/>
        <View
            android:id="@+id/point_table_third_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/day_aver_str"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/total_point_str"/>
        <TextView
            android:id="@+id/total_point_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="통산 획득 점수!!"
            app:layout_constraintTop_toBottomOf="@id/point_table_third_line"
            app:layout_constraintRight_toLeftOf="@id/total_point"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/total_step_str"/>
        <TextView
            android:id="@+id/total_point"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/point_table_third_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/total_point_str"
            app:layout_constraintBottom_toTopOf="@id/total_step"/>
        <TextView
            android:id="@+id/total_step_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="통산 걸음 수"
            app:layout_constraintTop_toBottomOf="@id/total_point_str"
            app:layout_constraintRight_toLeftOf="@id/total_step"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/point_table_final_line"/>
        <TextView
            android:id="@+id/total_step"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/total_point"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/total_step_str"
            app:layout_constraintBottom_toTopOf="@id/point_table_final_line"/>
        <View
            android:id="@+id/point_table_final_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/total_step_str"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/health_table"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/point_table"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/health_table_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ 건강 관련 정보 ]"
            android:textSize="18dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/health_table_first_line"/>
        <View
            android:id="@+id/health_table_first_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/health_table_str"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/health_edit"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/health_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/health_table_first_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/health_table_second_line">
            <TextView
                android:id="@+id/tall_str"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="키 : "
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tall_edit"/>
            <EditText
                android:id="@+id/tall_edit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:textSize="14dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weight_edit"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/cm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="cm"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tall_edit"/>
            <TextView
                android:id="@+id/weight_str"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="몸무게 : "
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weight_edit"/>
            <EditText
                android:id="@+id/weight_edit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:textSize="14dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tall_edit" />
            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="kg"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/weight_edit" />
            <Button
                android:id="@+id/cal_btn"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="계산"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:backgroundTint="#191919"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toBottomOf="@id/tall_edit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
/>
        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/health_table_second_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/health_edit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/now_calorie_str"/>
        <TextView
            android:id="@+id/now_calorie_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 소모 칼로리"
            app:layout_constraintTop_toBottomOf="@id/health_table_second_line"
            app:layout_constraintRight_toLeftOf="@id/now_calorie"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/total_calorie_str"/>
        <TextView
            android:id="@+id/now_calorie"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/health_table_second_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/now_calorie_str"
            app:layout_constraintBottom_toTopOf="@id/total_calorie"/>
        <TextView
            android:id="@+id/total_calorie_str"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="통산 소모 칼로리"
            app:layout_constraintTop_toBottomOf="@id/now_calorie_str"
            app:layout_constraintRight_toLeftOf="@id/total_calorie"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/total_calorie"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/now_calorie"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/total_calorie_str"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>