<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "0"
        android:textSize="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStopService"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btnStopService"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:drawableTop="@drawable/ic_play_arrow_black_24dp"
        android:background="@drawable/rounded_button"
        android:text="Play"
        app:layout_constraintTop_toBottomOf="@id/stepText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnStopService"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <Button
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:drawableLeft="@drawable/ic_info_outline_black_18dp"
            android:textSize="10sp"
            android:text=" 정    보 "
            app:layout_constraintBottom_toTopOf="@id/shop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/friends"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:drawableLeft="@drawable/ic_supervisor_account_black_18dp"
            android:textSize="10sp"
            android:text=" 친구 목록 "
            app:layout_constraintBottom_toTopOf="@id/logout"
            app:layout_constraintLeft_toRightOf="@id/status"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:drawableLeft="@drawable/ic_shop_black"
            android:textSize="10sp"
            android:text=" 상    점 "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/logout"
            app:layout_constraintTop_toBottomOf="@id/status"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:drawableLeft="@drawable/ic_power_settings_new_black_18dp"
            android:textSize="10sp"
            android:text=" 로그 아웃 "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/friends"
            android:layout_marginTop="10dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>